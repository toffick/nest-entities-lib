{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@test/entities": [
        "libs/entities/src"
      ],
      "@test/entities/*": [
        "libs/entities/src/*"
      ],
      "@test/constants": [
        "libs/constants/src"
      ],
      "@test/constants/*": [
        "libs/constants/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}